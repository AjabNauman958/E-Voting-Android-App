<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="16dp"
  tools:context=".voter_registration"
  android:background="@color/App_background_color">

  <!-- App Logo -->
  <ImageView
      android:id="@+id/imageViewLogo"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:src="@drawable/logo"
      android:layout_marginTop="12dp"
      android:layout_gravity="center_horizontal"/>

  <!-- Heading -->
  <TextView
      android:id="@+id/textViewHeading"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Voter Registration"
      android:textSize="20sp"
      android:textStyle="bold"
      android:layout_marginTop="8dp"
      android:layout_gravity="center_horizontal"/>

  <!-- CNIC No -->
  <EditText
      android:id="@+id/editTextCNIC"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:hint="CNIC No (With Dashes)"/>

  <!-- First Name -->
  <EditText
      android:id="@+id/editTextFirstName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:hint="First Name"/>

  <!-- Last Name -->
  <EditText
      android:id="@+id/editTextLastName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:hint="Last Name"/>

  <!-- Date of Birth -->
  <EditText
      android:id="@+id/editTextDOB"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:hint="Date of Birth (DD-MM-YYYY)"/>

  <!-- Father Name -->
  <EditText
      android:id="@+id/editTextFatherName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:hint="Father Name"/>

  <!-- Country Dropdown -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="15dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Country:"
        android:padding="8dp"/>

    <Spinner
        android:id="@+id/spinnerCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
  </LinearLayout>

  <!-- Province Dropdown -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="15dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Province:"
        android:padding="8dp"/>

    <Spinner
        android:id="@+id/spinnerProvince"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
  </LinearLayout>

  <!-- District Dropdown -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="15dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="District:"
        android:padding="8dp"/>

    <Spinner
        android:id="@+id/spinnerDistrict"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
  </LinearLayout>

  <!-- Permanent Address -->
  <EditText
      android:id="@+id/editTextAddress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:hint="House Address"/>

  <!-- Submit Button -->
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="#1d89a1"
        android:text="Submit" />
</LinearLayout>
